{
  "version": 2,
  "projects": [
    {
      "src": "apps/web",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/docs",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/docs/(.*)",
      "destination": "/apps/docs/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/web/$1"
    }
  ]
}
